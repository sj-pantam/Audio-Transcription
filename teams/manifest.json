{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.14/MicrosoftTeams.schema.json",
  "manifestVersion": "1.14",
  "version": "1.0.0",
  "id": "{{TEAMS_APP_ID}}",
  "packageName": "com.meetingnotes.app",
  "developer": {
    "name": "Meeting Notes Generator",
    "websiteUrl": "https://your-website.com",
    "privacyUrl": "https://your-website.com/privacy",
    "termsOfUseUrl": "https://your-website.com/terms"
  },
  "name": {
    "short": "Meeting Notes",
    "full": "Meeting Notes Generator"
  },
  "description": {
    "short": "Generate meeting notes from audio",
    "full": "An AI-powered application that transcribes audio from meetings and generates summaries and action items."
  },
  "icons": {
    "outline": "outline.png",
    "color": "color.png"
  },
  "accentColor": "#FFFFFF",
  "configurableTabs": [
    {
      "configurationUrl": "https://your-frontend-url.com/config",
      "canUpdateConfiguration": true,
      "scopes": [
        "team",
        "groupchat"
      ]
    }
  ],
  "staticTabs": [
    {
      "entityId": "meetingNotes",
      "name": "Meeting Notes",
      "contentUrl": "https://your-frontend-url.com",
      "websiteUrl": "https://your-frontend-url.com",
      "scopes": [
        "personal",
        "team"
      ]
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "your-frontend-url.com",
    "your-backend-url.com"
  ]
} 